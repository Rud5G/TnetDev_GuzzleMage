{
    "type": "metapackage",
    "description": "Empty package for the test requirements on the magento module",
    "authors":[
        {
            "name": "Rudger Gravestein",
            "email": "r.gravestein@triple-networks.com"
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.3.0",
        "firegento/psr0autoloader": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "magento-hackathon/composer-command-integrator": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/magento-hackathon/magento-composer-installer"
        },
        {
            "type": "composer",
            "url": "http://packages.firegento.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "": [
                "htdocs/app",
                "htdocs/app/code/local",
                "htdocs/app/code/community",
                "htdocs/app/code/core",
                "htdocs/lib"
            ]
        }
    },
    "extra": {
        "magento-root-dir": "htdocs/",
        "magento-deploystrategy": "symlink"
    }
}
